<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/nav.ejs') %>

    <div class="details content">
        <h2>All Blogs</h2>
                <h3 class="title"><%= blog.title %></h3>
                <div class="content">
                    <p class="body"><%= blog.body %></p>
                </div>
            <a class="delete" data-doc="<%= blog._id %>">X</a>
    </div>
    <%- include('../partials/footer.ejs') %>

    <script>
        const deleto = document.querySelector('a.delete');
        deleto.addEventListener('click', (e) => {
            const endpoint = `/blogs/${deleto.dataset.doc}`;
            fetch(endpoint, {
                method: 'DELETE'
            })
            .then((res) => res.json()
            .then((data) => window.location.href = data.redir )
            .catch(err => console.log(err))
            )
            .catch(err => console.log(err));
        });
    </script>
</body>
</html>